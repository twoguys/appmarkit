<h1>Sign in</h1>

<% form_for @user_session do |f| %>
  <%= f.error_messages %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

	<li class="mb10">
		<%= f.check_box :remember_me %>
		<%= f.label :remember_me, 'Remember me on this computer', :class => 'inline' %>
	</li>
	
	<%= hidden_field_tag :redirect_to, params[:redirect_to] %>

  <div class="mt10"><%= f.submit "Sign In" %> or <%= link_to "reset your password", new_password_reset_path %></div>
<% end %>

<script type="text/javascript">
	$(document).ready(function() {
		$('#user_session_email').focus();
	})
</script>