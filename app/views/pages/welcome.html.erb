<div class="centered">
	<%= image_tag('/images/splash.png') %>
</div>
<div class="mauto mt20 lined">
	<div class="centered">
		<h2>Have an app in the iTunes store? Try it out!</h2>
	</div>
	<div class="w400 mauto mt10">
		<div class="small weak centered">Search by app name or author name</div>
		<% form_for :app, :url => search_apps_path do |f| %>
			<%#= f.label :name, "Search by app name or author name" %>
			<%= f.text_field :name %>
			<%= f.submit 'Search', :class => 'button' %>
		<%- end -%>
	</div>
</div>
<div class="centered mt40 lined">
	<%= image_tag('/images/more.png') %>
</div>

<% content_for :head do %>
<script type="text/javascript">
	$(document).ready(function() {
		$('#app_name').focus();
	});
</script>
<% end %>