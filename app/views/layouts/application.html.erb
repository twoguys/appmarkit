<html>
	<head>
		<title>AppMark.it</title>
	</head>
	<body>
		<% if current_user %>
			<%= current_user.email %> |
			<%= link_to "My Apps", apps_path %> | 
			<%= link_to "Sign Out", logout_path %>
		<% else %>
			<%= link_to "Sign Up", new_user_path %> | 
			<%= link_to "Sign In", login_path %>
		<% end %>
		<br />
		<%= yield %>
	</body>
</html>