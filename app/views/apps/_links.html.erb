<% form_remote_for :link, Link.new, :url => [@app, 'links'] do |f| %>
	<div id="app-link-errors"></div>
	Name: <%= f.text_field :title %> URL: <%= f.text_field :url %> <%= f.submit "Add Link" %>
<%- end -%>

<ul id="app-links">
	<%= render @app.links %>
</ul>

<% content_for :javascript do %>
	<%= sortable_element 'app-links', :url => ['sort', @app, 'links'], :complete => visual_effect(:highlight, 'app-links') %>
<%- end -%>