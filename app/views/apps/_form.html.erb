<% form_for @app do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
	<p>
		<%= image_tag @itunes.artwork_url100 %><br />
		<%= image_tag @itunes.artwork_url60 %><br />
	</p>
  <p>
    <%= f.label :subdomain %><br />
    http://<%= f.text_field :subdomain %>.appmark.it
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>

	<p>
		Screenshots<br />
		<% for screenshot in @itunes.screenshot_urls %>
			<%= image_tag screenshot %>
		<%- end -%>
	</p>

	<%= f.hidden_field :itunes_url %>
  <p><%= f.submit "Submit" %></p>
<% end %>
