<%= image_tag(@app.small_artwork_url, :class => 'top-right') if @app.small_artwork_url %>

<h1><%= @app.name %></h1>
<div class="mb10">
	<%= link_to('Back to my apps', apps_path, :class => 'icon back mr15') %>
	<%= link_to('Delete this app', @app, :confirm => 'Are you sure you want to delete this app?', :method => :delete, :class => 'icon trash') %>
	<%= link_to('Refresh screenshots from iTunes', @app, :class => 'icon upgrade') %>
</div>

<%= render 'apps/analytics' %>

<%= render 'apps/homepage' %>

<%= render 'apps/domains' %>