<h1>New App</h1>

<h2>Enter the name of your iPhone app in the App Store</h2>
<% form_for :app, :url => search_apps_path do |f| %>
	<%= f.text_field :name %> <%= f.submit 'Search' %>
<%- end -%>

<% if @apps %>
<h2>Select your app...</h2>
	<table>
		<tr>
			<td>Icon</td>
			<td>App</td>
			<td>Author</td>
			<td>Is it yours?</td>
		</tr>
		<% for app in @apps %>
		<tr>
			<td><%= image_tag app.artwork_url60 %></td>
			<td><%= app.track_name %></td>
			<td><%= app.artist_name %></td>
			<td><%= link_to "Mine", new_app_path(:id => app.track_view_url.scan(/id(\d+)/).first.first) %></td>
		</tr>
		<%- end -%>
	</table>
<%- end -%>


<br /><br />
<%= link_to "Skip this step...", new_app_path %>