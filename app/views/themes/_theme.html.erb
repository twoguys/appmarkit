<li data-id="<%= theme.id %>" class="theme <%= cycle('light', 'dark') %>">
	<div class="screenshot-outer">
		<%= link_to(image_tag(theme.screenshot_url), theme.screenshot_url("large"), :class => 'screenshot') %>
	</div>
	<span class="name"><%= theme.name %></span>
	<% form_for @app, :html => {:class => "inline"} do |form| %>
		<%= form.hidden_field :theme_name, :value => theme.name %>
		<%= link_to_function('choose', "$(this).parent('form').submit();", :class => 'right button mt5') %>
	<% end %>
</li>